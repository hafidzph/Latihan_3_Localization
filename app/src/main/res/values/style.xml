<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Headline" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/marginTop_login</item>
    </style>

    <style name="home_headline" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/marginTop_login</item>
    </style>

    <style name="button" parent="ShapeAppearanceOverlay.Material3.FloatingActionButton">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:layout_marginTop">@dimen/marginTop_button</item>
        <item name="android:backgroundTint">@color/blue_light</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">60dp</item>
    </style>
</resources>